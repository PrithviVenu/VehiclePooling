<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context="io.github.techgeek.vehiclepooling.RideMatchActivity">

    <TextView
        android:id="@+id/name1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        android:text="DRIVER NAME:JIM"/>

    <TextView
        android:id="@+id/from1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_below="@+id/name1"
        android:text="From: Chennai"/>

    <TextView
        android:id="@+id/to1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_below="@+id/from1"
        android:text="To: Bangalore"/>

    <Button style="@style/Widget.AppCompat.Button.Colored"
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/to1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="284dp"
        android:layout_marginStart="284dp"
        android:text="25$"
        android:onClick="bu1"
        />

    <TextView
        android:id="@+id/name2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/to1"
        android:layout_marginTop="17dp"
        android:text="DRIVER NAME:TOM"
        android:textColor="#000000"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/from2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_below="@+id/name2"
        android:text="From: Chennai"/>

    <TextView
        android:id="@+id/to2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_below="@+id/from2"
        android:text="To: Bangalore"/>

    <Button style="@style/Widget.AppCompat.Button.Colored"
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/to2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="284dp"
        android:layout_marginStart="284dp"
        android:text="40$"
        android:onClick="bu2"
        />

    <TextView
        android:id="@+id/name3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/to2"
        android:layout_marginTop="17dp"
        android:text="DRIVER NAME:John"
        android:textColor="#000000"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/from3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_below="@+id/name3"
        android:text="From: Chennai"/>

    <TextView
        android:id="@+id/to3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_below="@+id/from3"
        android:text="To: Bangalore"/>

    <Button style="@style/Widget.AppCompat.Button.Colored"
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/to3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="284dp"
        android:layout_marginStart="284dp"
        android:text="30$"
        android:onClick="bu3"
        />

</RelativeLayout>